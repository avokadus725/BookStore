@model IEnumerable<BookStore.Models.Domain.Genre>
@{
}

<div class="container pt-5">
	<div class="row">
		<div class="col-md-6">
			<a class="btn btn-dark" href="/Genre/Add">Add More</a>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<h3>Genres</h3>
			
			<table class="table table-stripped table-bordered table-dark">
				<thead>
					<tr>
						<th>Name</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					@foreach(var item in Model)
					{
					<tr>
						<td>@item.name_genre</td>
						<td>
								<a class="btn btn-success" href="/Genre/Update?id=@item.id_genre"> Edit</a>
								<a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Genre/Delete?id=@item.id_genre"> Delete</a>
						</td>
					</tr>	
					}
				</tbody>
			</table>
		</div>
	</div>
</div>
